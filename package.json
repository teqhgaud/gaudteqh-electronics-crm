{
  "name": "gaudteqh-electronics-crm",
  "version": "1.0.0",
  "description": "A comprehensive Customer Relationship Management system for electronics repair businesses",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "test": "cd client && npm test && cd ../server && npm test",
    "lint": "cd client && npm run lint && cd ../server && npm run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\""
  },
  "keywords": [
    "crm",
    "electronics",
    "repair",
    "customer-management",
    "react",
    "nodejs",
    "mongodb"
  ],
  "author": "teqhgaud",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/teqhgaud/gaudteqh-electronics-crm.git"
  },
  "bugs": {
    "url": "https://github.com/teqhgaud/gaudteqh-electronics-crm/issues"
  },
  "homepage": "https://github.com/teqhgaud/gaudteqh-electronics-crm#readme",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
